@model ExcluirFilmeViewModel;

@{
    ViewBag.Title = "Excluir Filme";
    Layout = "_Layout";
}

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Excluir Filme</h4>
    </div>

    <div class="card-body">
        <h5>Tem certeza que deseja excluir este filme?</h5>

        <dl class="row mt-4">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Duração (minutos)</dt>
            <dd class="col-sm-9">@Model.Duracao</dd>

            <dt class="col-sm-3">Categoria</dt>
            <dd class="col-sm-9">@Model.CategoriaNome</dd>
        </dl>

        <form asp-action="ExcluirConfirmado" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-between">
                <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-danger">Excluir</button>
            </div>
        </form>
    </div>
</div>
