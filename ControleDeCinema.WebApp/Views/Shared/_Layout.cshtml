@{
    MensagemViewModel? mensagem = ViewBag.Mensagem ?? null;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Controle De Cinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/ControleDeCinema.WebApp.styles.css" asp-append-version="true" />

</head>
<body class="bg-dark">
    <header>
        <nav class="border-bottom border-3 border-white navbar navbar-expand-sm bg-black mb-3">

            <div class="container-fluid mx-5">

                <a class="navbar-brand text-white fw-bolder fst-normal fs-3" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="fs-1 text-danger fst-italic">C</span>ine<span class="fs-2 text-danger fst-italic">M</span>ax
                </a>

                <button class="navbar-toggler btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon "><i class="bi bi-list text-danger fs-2"></i></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between mt-3">
                    <ul class="navbar-nav flex-grow-1 fw-bolder">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Sala" asp-action="Listar">Salas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Categoria" asp-action="Listar">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Filme" asp-action="Listar">Filmes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Sessao" asp-action="Listar">Sessões</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
                        </li>
                        <li class="nav-item position-relative">
                            <!-- Botão para abrir o carrinho -->
                            <button class="btn btn-outline-danger position-relative" type="button" id="btnAbrirCarrinho">
                                <i class="bi bi-cart"></i>
                                    <span id="badgeCarrinho"
                                          class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    </span>
                            </button>
                        </li>



                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <h1 class="fw-semibold text-white">@ViewBag.Title</h1>
            <hr>
            <partial name="_Mensagem" model="mensagem"></partial>
            <partial name="_Carrinho"></partial>


            @RenderBody()
        </main>
    </div>

    <footer class="border-top border-3 border-white footer text-muted bg-black">
        <div class="container d-flex justify-content-center">
            &copy; 2025 - Controle De Cinema - <a class="mx-1" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
