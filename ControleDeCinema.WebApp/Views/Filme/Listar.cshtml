@model List<ListarFilmeViewModel>

@{
    ViewBag.Title = "Listar Filmes";
    Layout = "_Layout";
}

<div class="card-body">
    <div class="card-header d-flex justify-content-between align-items-center">
        <a asp-action="Cadastrar" class="btn btn-primary">Cadastrar Filme</a>
    </div>

    <div class="card-body">
        <table class="table table-striped text-white">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Duração (min)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var filme in Model)
                {
                    <tr class=" text-white">
                        <td>@filme.Id</td>
                        <td>@filme.Nome</td>
                        <td>@filme.Duracao</td>
                        <td>
                            <a asp-action="Detalhar" asp-route-id="@filme.Id" class="btn btn-info btn-sm">Detalhar</a>
                            <a asp-action="Editar" asp-route-id="@filme.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Excluir" asp-route-id="@filme.Id" class="btn btn-danger btn-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
