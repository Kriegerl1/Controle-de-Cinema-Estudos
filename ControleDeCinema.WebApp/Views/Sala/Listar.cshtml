@model IEnumerable<ListarSalaViewModel>
@{
    ViewBag.Title = "Listar Salas";
    Layout = "_Layout";
}

<div class="card-body">
    <div class="d-flex w-100">

    <div class="text-center justify-content-end">
    </div>
        <a asp-action="Cadastrar" class="btn btn-primary">Adicionar Nova Sala</a>
    </div>
    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered text-white">
            <thead >
                <tr>
                    <th>Nome</th>
                    <th>Capacidade</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sala in Model)
                {
                    <tr class="text-white">
                        <td>@sala.Nome</td>
                        <td>@sala.Capacidade</td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@sala.Id" class="btn btn-primary">Editar</a>
                            <a asp-action="Detalhes" asp-route-id="@sala.Id" class="btn btn-primary">Detalhes</a>
                            <a asp-action="Excluir" asp-route-id="@sala.Id" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>